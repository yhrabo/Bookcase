@model WebMVC.Areas.Shelves.ViewModels.ShelfViewModel

@{
    ViewData["Title"] = "Edit shelf";
}

<h1>Edit shelf</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AccessLevel" class="control-label"></label>
                <select asp-for="AccessLevel" asp-items="Html.GetEnumSelectList<WebMVC.Areas.Shelves.ViewModels.AccessLevel>()">
                    <option selected="selected" value=""></option>
                </select>
                <span asp-validation-for="AccessLevel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-route="UserShelves" asp-route-userId="@Model.OwnerId">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
