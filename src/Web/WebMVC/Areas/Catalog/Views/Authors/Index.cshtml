@model WebMVC.Areas.Catalog.ViewModels.IndexViewModel<WebMVC.Areas.Catalog.ViewModels.AuthorOutputViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
@{
    var msg = TempData["message"] as string;
    if (!string.IsNullOrEmpty(msg))
    {
        <div class="alert alert-success">
            @msg
        </div>
    }
}
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Items.FirstOrDefault().Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Items.FirstOrDefault().Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Items.Count() > 0)
        {
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", "Authors", new { area = "Catalog", id = item.Id }) |
                        @Html.ActionLink("Details", "Details", "Authors", new { area = "Catalog", id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", "Authors", new { area = "Catalog", id = item.Id })
                    </td>
                </tr>
            }

            <partial name="_pagination" for="PaginationInfo" />
        }
    </tbody>
</table>
